{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"fmt": {
		"options": {
			"lineWidth": 120,
			"singleQuote": true,
			"useTabs": true
		}
	},
	"importMap": "./imports.json",
	"tasks": {
		"cli": "deno run --allow-net src/cli.ts",
		"dev": "deno run -A --watch=src/server/static/,src/server/routes/ src/server/dev.ts",
		"server": "DENO_DEPLOYMENT_ID=$(git rev-parse HEAD) deno run -A src/server/main.ts"
	}
}
